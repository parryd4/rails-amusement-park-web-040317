<% if @user.admin %>
    <p> ADMIN </p>
<% end %>

<%= flash[:notice] %>

<p>Name: <%= @attraction.name %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Required Tickets: <%= @attraction.tickets %></p>
<p>Required Height: <%= @attraction.min_height %></p>


<% if @user.admin %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
  <p><%= form_tag take_ride_path do%></p>
  <p><%= hidden_field_tag 'attraction[id]', @attraction.id%></p>
  <p><%= submit_tag "Go on this ride"%></p>
  <p><%end%></p>
<% end %>


<p><%= link_to 'Log Out', logout_path, method: :delete %></p>
<p><%= link_to 'See attractions', attractions_path %></p>
